<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Border" x:Key="minhaBorda">
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="BackgroundColor" Value="#fff"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 2"/>
    </Style>
    <Style TargetType="Label" x:Key="rotulo">
        <Setter Property="TextColor" Value="#5b5b5b"/>
        <Setter Property="FontFamily" Value="font03"/>
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
    </Style>
    <Style TargetType="Label" x:Key="dados">
        <Setter Property="TextColor" Value="#000"/>
        <Setter Property="FontFamily" Value="font03"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="0, 5"/>
        <Setter Property="HorizontalOptions" Value="StartAndExpand"/>
        <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
    </Style>

</ResourceDictionary>